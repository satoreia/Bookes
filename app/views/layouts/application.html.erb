<!DOCTYPE html>
<html>
<head>
	<title>Bookes</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


</head>

<body>
	<header>
		<nav class="navbar navbar-inverse">
			<div class="container">
				<h1 class="navbar-left"> <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookes</h1>
				<div class="collapse navbar-collapse" id="navbarEexample1">
					<ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
						<!-- <li class="user_name">Logged in as <%#= current_user.name %></li> -->
						<li>
							<%= link_to user_path(current_user.id) do %>
							<span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
							<% end %>
						</li>
						<li>
							<%= link_to users_path do %>
							<span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
							<% end %>
						</li>
						<li><%= link_to books_path do %>
							<span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
							<% end %>
						</li>
						<li><%= link_to destroy_user_session_path,
						method: :delete do %>
						<span class="glyphicon glyphicon-log-out" aria-hidden="true"> LogOut</span>
						<% end %>
					</li>
					<% else %>
					<li>
						<%= link_to root_path do %>
						<span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
						<% end %>
					</li>
					<li>
						<%= link_to about_path do %>
						<span class="glyphicon glyphicon-link" aria-hidden="true"> About</span>
						<% end %>
					</li>
					<li>
						<%= link_to new_user_registration_path do %>
						<span class="glyphicon glyphicon-edit" aria-hidden="true"> Sign Up</span>
						<% end %>
					</li>
					<li>
						<%= link_to new_user_session_path do %>
						<span class="glyphicon glyphicon-log-in" aria-hidden="true"> Log In</span>
						<% end %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>
</header>

<% flash.each do |key, value| %>
<div class="alert alert-<%= key %>">
	<%= value %>
</div>
<% end %>

<div class="container">
	<%= yield %>
</div>

<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-7"></div>
			<div class="col-xs-4">
				<p class="footer-text"> CopyRight @nionmiya</p>
			</div>
			<div class="col-xs-1"></div>
		</div>
	</div>
</footer>
</body>
</html>