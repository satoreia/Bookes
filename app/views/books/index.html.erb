<h1> Books</h1>
<table>
	<tr>
		<th> Title</th><th> Body</th><th> </th>
	</tr>

	<% @books.each do |book| %>
	<tr>
		<td><span> <%= book.title %></span></td>
		<td><span> <%= book.body %></span></td>
		<td><%= link_to "Show", book_path(book.id) %></td>
		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
		<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>

</table>




<h2> New book</h2>
<!-- <p>Find me in app/views/books/new.html.erb</p> -->
<%= form_for(@book) do |f| %>

<div class="new-text">
	<p> Title</p>
	<%= f.text_field :title %>

	<p> Body</p>
	<%= f.text_area :body %>

	<p> <%= f.submit 'create book' %></p>
</div>

<% end %>