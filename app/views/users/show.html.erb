<div class="containa">

<div class="col-xs-3">
  <%= render 'layouts/userInfo', book: @book %>
</div>

<div class="col-xs-9">
  <h2>Books</h2>

  <table class="table">
    <thead>
      <tr>
        <th class="col-xs-1"></th>
        <th class="col-xs-3">title</th>
        <th>opinion</th>
      </tr>
    </thead>


    <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <% if @user.image_id.nil? %>
        <td>
          <%= image_tag('no_image.jpg', style:"width:40px; height:40px;") %>
        </td>
        <% else %>
        <td>
          <%= attachment_image_tag @user, :image, style:
          "width:40px; height:40px" %>
        </td>
        <% end %>

        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>

        <td>
          <%= book.opinion %>
        </td>

      </tr>
      <% end %>
    </tbody>


  </table>
</div>

</div>